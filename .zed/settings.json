{
  "languages": {
    "Ruby": {
      "language_servers": ["ruby-lsp"],
      "formatter": {
        "external": {
          "command": "bundle",
          "arguments": [
            "exec",
            "rubocop",
            "--stdin",
            "{buffer_path}",
            "--format",
            "quiet",
            "--stderr",
            "--autocorrect"
          ]
        }
      }
    }
  },
  "lsp": {
    "ruby-lsp": {
      "initialization_options": {
        "enabledFeatures": [
          "completion",
          "definition",
          "diagnostics",
          "formatting",
          "hover"
        ],
        "formatter": "rubocop"
      }
    }
  }
}
