<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="mb-0">Access Tokens</h1>
  <%= link_to "Create New Token", new_access_token_path, class: "btn btn-primary" %>
</div>

<% if @access_tokens.any? %>
  <div class="card">
    <div class="card-header">
      <h5 class="card-title mb-0">Tokens</h5>
    </div>
    <div class="card-body p-0">
      <div class="table-responsive">
        <table class="table table-hover mb-0">
          <thead class="table-light">
            <tr>
              <th>Name</th>
              <th>Status</th>
              <th>Created</th>
              <th>Last Used</th>
              <th class="text-end">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @access_tokens.each do |token| %>
              <tr>
                <td>
                  <code class="text-dark"><%= token.name %></code>
                </td>
                <td>
                  <% if token.active? %>
                    <span class="badge bg-success">Active</span>
                  <% else %>
                    <span class="badge bg-secondary">Inactive</span>
                  <% end %>
                </td>
                <td>
                  <small class="text-muted">
                    <%= time_ago_in_words(token.created_at) %> ago
                  </small>
                </td>
                <td>
                  <% if token.last_used_at %>
                    <small class="text-muted">
                      <%= time_ago_in_words(token.last_used_at) %> ago
                    </small>
                  <% else %>
                    <small class="text-muted">Never</small>
                  <% end %>
                </td>
                <td class="text-end">
                  <%= button_to access_token_path(token),
                                method: :delete,
                                class: "btn btn-sm btn-outline-danger",
                                form_class: "d-inline",
                                data: {
                                  confirm: "Are you sure you want to delete '#{token.name}'? This action cannot be undone."
                                } do %>
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                      <polyline points="3,6 5,6 21,6"></polyline>
                      <path d="m19,6v14a2,2 0 0,1-2,2H7a2,2 0 0,1-2-2V6m3,0V4a2,2 0 0,1 2-2h4a2,2 0 0,1 2,2v2"></path>
                      <line x1="10" y1="11" x2="10" y2="17"></line>
                      <line x1="14" y1="11" x2="14" y2="17"></line>
                    </svg>
                    Delete
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
<% else %>
  <div class="card">
    <div class="card-body text-center py-5">
      <div class="text-muted mb-3">
        <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="mx-auto">
          <rect x="3" y="11" width="18" height="10" rx="2" ry="2"/>
          <circle cx="12" cy="16" r="1"/>
          <path d="m7 11V7a5 5 0 0 1 10 0v4"/>
        </svg>
      </div>
      <h5>No access tokens yet</h5>
      <p class="text-muted mb-4">Create your first access token to start using the API.</p>
      <%= link_to "Create New Token", new_access_token_path, class: "btn btn-primary" %>
    </div>
  </div>
<% end %>