<% content_for :title, "New Feed" %>

<div class="space-y-8">
  <%= render PageHeaderComponent.new(title: "New Feed") %>

  <div class="max-w-3xl mx-auto">
    <% if !active_access_tokens? %>
      <%= render "blocked_no_tokens" %>
    <% elsif @feed.url.present? %>
      <%= render "form_expanded", feed: @feed, edit_mode: false %>
    <% else %>
      <%= render "form_collapsed" %>
    <% end %>
  </div>
</div>
