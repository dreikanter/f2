<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 id="feed-title"><%= @feed.name %></h1>
  <div class="d-flex gap-2 align-items-center">
    <% if @feed.enabled? %>
      <div class="d-flex align-items-center me-2">
        <%= icon("play-circle-fill", css_class: "text-success me-1") %>
        <span class="text-success fw-medium">Enabled</span>
      </div>
      <%= button_to "Disable", feed_status_path(@feed),
          method: :patch,
          params: { status: "disabled" },
          data: { confirm: "Are you sure you want to disable this feed?" },
          class: "btn btn-outline-secondary" %>
    <% elsif @feed.can_be_enabled? %>
      <div class="d-flex align-items-center">
        <%= icon("pause-circle-fill", css_class: "text-secondary me-1") %>
        <span class="text-secondary fw-medium">Ready to Enable</span>
      </div>
      <%= button_to "Enable", feed_status_path(@feed),
          method: :patch,
          params: { status: "enabled" },
          class: "btn btn-success" %>
    <% elsif @feed.disabled? && !@feed.can_be_enabled? %>
      <div class="d-flex align-items-center me-2">
        <%= icon("gear-fill", css_class: "text-secondary me-1") %>
        <span class="text-secondary fw-medium">Configuration Needed</span>
      </div>
    <% else %>
      <div class="d-flex align-items-center me-2">
        <%= icon("pause-circle-fill", css_class: "text-muted me-1") %>
        <span class="text-muted fw-medium">Disabled</span>
      </div>
    <% end %>

    <% if @feed.can_be_previewed? %>
      <%= button_to "Preview", feed_previews_path,
          params: { url: @feed.url, feed_profile_key: @feed.feed_profile_key },
          method: :post,
          class: "btn btn-outline-secondary",
          data: { turbo: false } %>
    <% else %>
      <span class="btn btn-outline-secondary disabled" title="Preview requires URL and Feed Profile">Preview</span>
    <% end %>
  </div>
</div>


<div class="list-group">
  <div class="list-group-item" id="content-source-display">
    <div id="content-source-content">
      <%= render "content_source_display", feed: @feed %>
    </div>
  </div>

  <div class="list-group-item" id="reposting-display">
    <div id="reposting-content">
      <%= render "reposting_display", feed: @feed %>
    </div>
  </div>

  <div class="list-group-item" id="scheduling-display">
    <div id="scheduling-content">
      <%= render "scheduling_display", feed: @feed %>
    </div>
  </div>
</div>

<div id="edit-form-container"></div>

<%= page_section_header "Stats" %>

<div class="list-group">
  <div class="list-group-item">
    <div class="row">
      <div class="col-md-6">
        <strong>Last Refresh:</strong>
        <% if @feed.last_refreshed_at %>
          <%= time_ago_tag(@feed.last_refreshed_at) %>
        <% else %>
          <em class="text-muted">Never refreshed</em>
        <% end %>
      </div>
      <div class="col-md-6">
        <strong>Most Recent Post:</strong>
        <% if @feed.most_recent_post_date %>
          <%= time_ago_tag(@feed.most_recent_post_date) %>
        <% else %>
          <em class="text-muted">No posts imported</em>
        <% end %>
      </div>
    </div>
  </div>
</div>

<%= page_section_header "Recent Posts" %>

<% if @recent_posts.any? %>
  <%= render "shared/posts_table", posts: @recent_posts, hide_feed_column: true %>
  <div class="mt-2">
    <%= link_to "View All Posts", posts_path(feed_id: @feed.id), class: "btn btn-sm btn-outline-primary" %>
  </div>
<% else %>
  <div class="text-center py-4">
    <p class="text-muted">No posts imported yet from this feed.</p>
  </div>
<% end %>

<%= page_section_header "Danger Zone" %>

<% if @feed.target_group.present? %>
  <div class="card">
    <div class="card-body">
      <h5 class="card-title">Remove All Published Posts</h5>
      <p class="card-text">Deletes all posts published to FreeFeed group <strong><%= @feed.target_group %></strong>. Feed configuration remains intact.</p>
      <%= link_to "Purge feed", feed_purge_path(@feed), class: "btn btn-outline-danger" %>
    </div>
  </div>
<% end %>
  <div class="card mt-3">
    <div class="card-body">
      <h5 class="card-title">Permanently Delete Feed</h5>
      <p class="card-text">Removes feed configuration and all associated posts from database.</p>
      <%= link_to "Delete feed", @feed, data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this feed?" }, class: "btn btn-outline-danger" %>
  </div>
</div>
