<div class="d-flex justify-content-between align-items-center mb-4">
  <h1><%= @feed.name %></h1>
  <div class="d-flex gap-2 align-items-center">
    <% if @feed.enabled? %>
      <div class="d-flex align-items-center me-2">
        <i class="bi bi-play-circle-fill text-success me-1"></i>
        <span class="text-success fw-medium">Enabled</span>
      </div>
      <%= button_to "Disable", feed_status_path(@feed),
          method: :patch,
          params: { status: "disabled" },
          data: { confirm: "Are you sure you want to disable this feed?" },
          class: "btn btn-outline-secondary" %>
    <% elsif @feed.can_be_enabled? %>
      <div class="d-flex align-items-center">
        <i class="bi bi-pause-circle-fill text-warning me-1"></i>
        <span class="text-warning fw-medium">Ready to Enable</span>
      </div>
      <%= button_to "Enable", feed_status_path(@feed),
          method: :patch,
          params: { status: "enabled" },
          class: "btn btn-success" %>
    <% elsif @feed.inactive? %>
      <div class="d-flex align-items-center me-2">
        <i class="bi bi-gear-fill text-secondary me-1"></i>
        <span class="text-secondary fw-medium">Configuration Needed</span>
      </div>
    <% else %>
      <div class="d-flex align-items-center me-2">
        <i class="bi bi-pause-circle-fill text-muted me-1"></i>
        <span class="text-muted fw-medium">Disabled</span>
      </div>
    <% end %>

    <% if @feed.can_be_previewed? %>
      <%= button_to "Preview", feed_previews_path,
          params: { url: @feed.url, feed_profile_name: @feed.feed_profile.name },
          method: :post,
          class: "btn btn-outline-secondary",
          data: { turbo: false } %>
    <% else %>
      <span class="btn btn-outline-secondary disabled" title="Preview requires URL and Feed Profile">Preview</span>
    <% end %>

    <%= link_to "Delete", @feed, data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this feed?" }, class: "btn btn-outline-danger" %>
  </div>
</div>

<!-- Configuration Progress -->
<div class="row mb-4">
  <div class="col-12">
    <div class="d-flex justify-content-between align-items-center mb-2">
      <h4>Configuration Progress</h4>
      <% completion_count = [@feed.url.present?, @feed.feed_profile.present?, @feed.access_token&.active?, @feed.target_group.present?, @feed.cron_expression.present?].count(true) %>
      <span class="badge bg-<%= completion_count == 5 ? 'success' : 'warning' %> fs-6"><%= completion_count %>/5 Complete</span>
    </div>
    <div class="progress mb-3">
      <div class="progress-bar bg-<%= completion_count == 5 ? 'success' : 'warning' %>" style="width: <%= (completion_count / 5.0 * 100).round %>%"></div>
    </div>
  </div>
</div>

<!-- Section 1: Content Source -->
<div class="card mb-4" id="content-source-section">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h5 class="card-title mb-0">
      <% if @feed.url.present? && @feed.feed_profile.present? %>
        <i class="bi bi-check-circle-fill text-success me-2"></i>
      <% else %>
        <i class="bi bi-circle text-muted me-2"></i>
      <% end %>
      1. Content Source
    </h5>
    <%= link_to "Edit", edit_feed_path(@feed, section: "content_source"),
        class: "btn btn-outline-primary btn-sm",
        data: { turbo_stream: true } %>
  </div>
  <div class="card-body" id="content-source-display">
    <dl class="row mb-0">
      <dt class="col-sm-3">Feed URL</dt>
      <dd class="col-sm-9">
        <% if @feed.url.present? %>
          <a href="<%= @feed.url %>" target="_blank" class="text-decoration-none">
            <%= @feed.url %>
          </a>
        <% else %>
          <span class="text-muted">Not configured</span>
        <% end %>
      </dd>

      <dt class="col-sm-3">Feed Profile</dt>
      <dd class="col-sm-9">
        <% if @feed.feed_profile %>
          <span class="badge bg-info"><%= @feed.feed_profile.name %></span>
        <% else %>
          <span class="text-muted">Not configured</span>
        <% end %>
      </dd>
    </dl>
  </div>
</div>

<!-- Section 2: Reposting Configuration -->
<div class="card mb-4" id="reposting-section">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h5 class="card-title mb-0">
      <% if @feed.access_token&.active? && @feed.target_group.present? %>
        <i class="bi bi-check-circle-fill text-success me-2"></i>
      <% else %>
        <i class="bi bi-circle text-muted me-2"></i>
      <% end %>
      2. Reposting Configuration
    </h5>
    <%= link_to "Edit", edit_feed_path(@feed, section: "reposting"),
        class: "btn btn-outline-primary btn-sm",
        data: { turbo_stream: true } %>
  </div>
  <div class="card-body" id="reposting-display">
    <dl class="row mb-0">
      <dt class="col-sm-3">Access Token</dt>
      <dd class="col-sm-9">
        <% if @feed.access_token %>
          <%= @feed.access_token.name %>
          <span class="badge bg-<%= @feed.access_token.active? ? 'success' : 'danger' %> ms-2">
            <%= @feed.access_token.status.capitalize %>
          </span>
        <% else %>
          <span class="text-muted">Not configured</span>
        <% end %>
      </dd>

      <dt class="col-sm-3">Target Group</dt>
      <dd class="col-sm-9">
        <% if @feed.target_group.present? %>
          <%= @feed.target_group %>
        <% else %>
          <span class="text-muted">Not configured</span>
        <% end %>
      </dd>

      <dt class="col-sm-3">Freefeed Host</dt>
      <dd class="col-sm-9">
        <% if @feed.access_token %>
          <%= @feed.access_token.host %>
        <% else %>
          <span class="text-muted">Not configured</span>
        <% end %>
      </dd>
    </dl>
  </div>
</div>

<!-- Section 3: Scheduling Configuration -->
<div class="card mb-4" id="scheduling-section">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h5 class="card-title mb-0">
      <% if @feed.cron_expression.present? %>
        <i class="bi bi-check-circle-fill text-success me-2"></i>
      <% else %>
        <i class="bi bi-circle text-muted me-2"></i>
      <% end %>
      3. Scheduling Configuration
    </h5>
    <%= link_to "Edit", edit_feed_path(@feed, section: "scheduling"),
        class: "btn btn-outline-primary btn-sm",
        data: { turbo_stream: true } %>
  </div>
  <div class="card-body" id="scheduling-display">
    <dl class="row mb-0">
      <dt class="col-sm-3">Schedule</dt>
      <dd class="col-sm-9">
        <% if @feed.cron_expression.present? %>
          <code class="text-dark fs-6"><%= @feed.cron_expression %></code>
        <% else %>
          <span class="text-muted">Not configured</span>
        <% end %>
      </dd>

      <dt class="col-sm-3">Import After</dt>
      <dd class="col-sm-9">
        <% if @feed.import_after %>
          <%= @feed.import_after.to_fs(:long) %>
        <% else %>
          <span class="text-muted">All items</span>
        <% end %>
      </dd>

      <% if @feed.enabled? %>
        <dt class="col-sm-3">Next Run</dt>
        <dd class="col-sm-9">
          <%= @feed.feed_schedule&.next_run_at&.to_fs(:long) || "Not scheduled" %>
        </dd>

        <dt class="col-sm-3">Last Run</dt>
        <dd class="col-sm-9">
          <%= @feed.feed_schedule&.last_run_at&.to_fs(:long) || "Never" %>
        </dd>
      <% end %>
    </dl>

    <% if @feed.description.present? %>
      <hr>
      <dl class="row mb-0">
        <dt class="col-sm-3">Description</dt>
        <dd class="col-sm-9">
          <%= simple_format(@feed.description, class: "mb-0") %>
        </dd>
      </dl>
    <% end %>
  </div>
</div>
