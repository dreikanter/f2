<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 id="feed-title"><%= @feed.name %></h1>
  <div class="d-flex gap-2 align-items-center">
    <% if @feed.enabled? %>
      <div class="d-flex align-items-center me-2">
        <i class="bi bi-play-circle-fill text-success me-1"></i>
        <span class="text-success fw-medium">Enabled</span>
      </div>
      <%= button_to "Disable", feed_status_path(@feed),
          method: :patch,
          params: { status: "disabled" },
          data: { confirm: "Are you sure you want to disable this feed?" },
          class: "btn btn-outline-secondary" %>
    <% elsif @feed.can_be_enabled? %>
      <div class="d-flex align-items-center">
        <i class="bi bi-pause-circle-fill text-secondary me-1"></i>
        <span class="text-secondary fw-medium">Ready to Enable</span>
      </div>
      <%= button_to "Enable", feed_status_path(@feed),
          method: :patch,
          params: { status: "enabled" },
          class: "btn btn-success" %>
    <% elsif @feed.disabled? && !@feed.can_be_enabled? %>
      <div class="d-flex align-items-center me-2">
        <i class="bi bi-gear-fill text-secondary me-1"></i>
        <span class="text-secondary fw-medium">Configuration Needed</span>
      </div>
    <% else %>
      <div class="d-flex align-items-center me-2">
        <i class="bi bi-pause-circle-fill text-muted me-1"></i>
        <span class="text-muted fw-medium">Disabled</span>
      </div>
    <% end %>

    <% if @feed.can_be_previewed? %>
      <%= button_to "Preview", feed_previews_path,
          params: { url: @feed.url, feed_profile_name: @feed.feed_profile.name },
          method: :post,
          class: "btn btn-outline-secondary",
          data: { turbo: false } %>
    <% else %>
      <span class="btn btn-outline-secondary disabled" title="Preview requires URL and Feed Profile">Preview</span>
    <% end %>

    <%= link_to "Delete", @feed, data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this feed?" }, class: "btn btn-outline-danger" %>
  </div>
</div>


<div class="list-group">
  <div class="list-group-item" id="content-source-display">
    <div id="content-source-content">
      <%= render "content_source_display", feed: @feed %>
    </div>
  </div>

  <div class="list-group-item" id="reposting-display">
    <div id="reposting-content">
      <%= render "reposting_display", feed: @feed %>
    </div>
  </div>

  <div class="list-group-item" id="scheduling-display">
    <div id="scheduling-content">
      <%= render "scheduling_display", feed: @feed %>
    </div>
  </div>

  <div class="list-group-item">
    <div class="row">
      <div class="col-md-6">
        <strong>Last Refresh:</strong>
        <% if @feed.last_refreshed_at %>
          <%= @feed.last_refreshed_at.strftime("%B %d, %Y at %H:%M") %>
          <small class="text-muted">(<%= time_ago_in_words(@feed.last_refreshed_at) %> ago)</small>
        <% else %>
          <em class="text-muted">Never refreshed</em>
        <% end %>
      </div>
      <div class="col-md-6">
        <strong>Most Recent Post:</strong>
        <% if @feed.most_recent_post_date %>
          <%= @feed.most_recent_post_date.strftime("%B %d, %Y at %H:%M") %>
          <small class="text-muted">(<%= time_ago_in_words(@feed.most_recent_post_date) %> ago)</small>
        <% else %>
          <em class="text-muted">No posts imported</em>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="mt-4">
  <h3 class="mb-3">Recent Posts</h3>
  <% if @recent_posts.any? %>
    <div class="table-responsive">
      <table class="table table-hover table-bordered">
        <thead>
          <tr>
            <th>Content</th>
            <th>Published</th>
            <th>Attachments</th>
            <th>Comments</th>
            <th>Status</th>
            <th>Links</th>
          </tr>
        </thead>
        <tbody>
          <% @recent_posts.each do |post| %>
            <tr>
              <td>
                <%= link_to post, class: "text-decoration-none" do %>
                  <%= truncate(post.content, length: 100) %>
                <% end %>
              </td>
              <td>
                <small class="text-muted">
                  <%= post.published_at.strftime("%m/%d %H:%M") if post.published_at %>
                </small>
              </td>
              <td class="text-center">
                <% if post.attachment_urls.present? %>
                  <span class="badge bg-info">
                    <%= post.attachment_urls.length %>
                  </span>
                <% else %>
                  <span class="text-muted">—</span>
                <% end %>
              </td>
              <td class="text-center">
                <% if post.comments.present? %>
                  <span class="badge bg-secondary">
                    <%= post.comments.length %>
                  </span>
                <% else %>
                  <span class="text-muted">—</span>
                <% end %>
              </td>
              <td>
                <% case post.status %>
                <% when "published" %>
                  <span class="badge bg-success">Published</span>
                <% when "failed" %>
                  <span class="badge bg-danger">Failed</span>
                <% when "enqueued" %>
                  <span class="badge bg-warning">Enqueued</span>
                <% when "rejected" %>
                  <span class="badge bg-secondary">Rejected</span>
                <% else %>
                  <span class="badge bg-light text-dark"><%= post.status.capitalize %></span>
                <% end %>
              </td>
              <td>
                <div class="d-flex gap-1 flex-wrap">
                  <% if post.freefeed_post_id.present? %>
                    <%= link_to "FreeFeed", "https://freefeed.net/#{@feed.target_group}/#{post.freefeed_post_id}",
                                class: "btn btn-sm btn-outline-primary",
                                target: "_blank",
                                rel: "noopener" %>
                  <% end %>
                  <% if post.source_url.present? %>
                    <%= link_to "Source", post.source_url,
                                class: "btn btn-sm btn-outline-secondary",
                                target: "_blank",
                                rel: "noopener" %>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="text-center mt-3">
      <%= link_to "View All Posts", posts_path, class: "btn btn-outline-primary" %>
    </div>
  <% else %>
    <div class="text-center py-4">
      <p class="text-muted">No posts imported yet from this feed.</p>
    </div>
  <% end %>
</div>

