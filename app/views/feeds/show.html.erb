<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 id="feed-title"><%= @feed.name %></h1>
  <div class="d-flex gap-2 align-items-center">
    <% if @feed.enabled? %>
      <div class="d-flex align-items-center me-2">
        <i class="bi bi-play-circle-fill text-success me-1"></i>
        <span class="text-success fw-medium">Enabled</span>
      </div>
      <%= button_to "Disable", feed_status_path(@feed),
          method: :patch,
          params: { status: "disabled" },
          data: { confirm: "Are you sure you want to disable this feed?" },
          class: "btn btn-outline-secondary" %>
    <% elsif @feed.can_be_enabled? %>
      <div class="d-flex align-items-center">
        <i class="bi bi-pause-circle-fill text-secondary me-1"></i>
        <span class="text-secondary fw-medium">Ready to Enable</span>
      </div>
      <%= button_to "Enable", feed_status_path(@feed),
          method: :patch,
          params: { status: "enabled" },
          class: "btn btn-success" %>
    <% elsif @feed.disabled? && !@feed.can_be_enabled? %>
      <div class="d-flex align-items-center me-2">
        <i class="bi bi-gear-fill text-secondary me-1"></i>
        <span class="text-secondary fw-medium">Configuration Needed</span>
      </div>
    <% else %>
      <div class="d-flex align-items-center me-2">
        <i class="bi bi-pause-circle-fill text-muted me-1"></i>
        <span class="text-muted fw-medium">Disabled</span>
      </div>
    <% end %>

    <% if @feed.can_be_previewed? %>
      <%= button_to "Preview", feed_previews_path,
          params: { url: @feed.url, feed_profile_name: @feed.feed_profile.name },
          method: :post,
          class: "btn btn-outline-secondary",
          data: { turbo: false } %>
    <% else %>
      <span class="btn btn-outline-secondary disabled" title="Preview requires URL and Feed Profile">Preview</span>
    <% end %>

    <% if policy(@feed).destroy? %>
      <%= link_to "Delete", @feed, data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this feed?" }, class: "btn btn-outline-danger" %>
    <% end %>
  </div>
</div>


<div class="list-group">
  <div class="list-group-item" id="content-source-display">
    <div id="content-source-content">
      <%= render "content_source_display", feed: @feed %>
    </div>
  </div>

  <div class="list-group-item" id="reposting-display">
    <div id="reposting-content">
      <%= render "reposting_display", feed: @feed %>
    </div>
  </div>

  <div class="list-group-item" id="scheduling-display">
    <div id="scheduling-content">
      <%= render "scheduling_display", feed: @feed %>
    </div>
  </div>
</div>

