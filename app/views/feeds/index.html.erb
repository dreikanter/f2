<div class="container-fluid">
  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>My Feeds</h1>
        <%= link_to "New Feed", new_feed_path, class: "btn btn-primary" %>
      </div>

      <% if @feeds.any? %>
        <div class="row">
          <% @feeds.each do |feed| %>
            <div class="col-md-6 col-lg-4 mb-4">
              <div class="card h-100">
                <div class="card-body">
                  <div class="d-flex justify-content-between align-items-start mb-2">
                    <h5 class="card-title mb-0"><%= feed.name %></h5>
                    <span class="badge bg-<%= feed.enabled? ? 'success' : feed.paused? ? 'warning' : 'danger' %>">
                      <%= feed.state.capitalize %>
                    </span>
                  </div>

                  <p class="card-text text-muted small mb-2">
                    <i class="bi bi-link-45deg"></i> <%= truncate(feed.url, length: Feed::NAME_MAX_LENGTH) %>
                  </p>

                  <p class="card-text text-muted small mb-2">
                    <i class="bi bi-clock"></i> <%= feed.cron_expression %>
                  </p>

                  <% if feed.description.present? %>
                    <p class="card-text"><%= truncate(feed.description, length: Feed::DESCRIPTION_MAX_LENGTH) %></p>
                  <% end %>
                </div>

                <div class="card-footer bg-transparent">
                  <div class="btn-group w-100" role="group">
                    <%= link_to "View", feed, class: "btn btn-outline-primary btn-sm" %>
                    <%= link_to "Edit", edit_feed_path(feed), class: "btn btn-outline-secondary btn-sm" %>
                    <%= link_to "Delete", feed, method: :delete, confirm: "Are you sure you want to delete this feed?", class: "btn btn-outline-danger btn-sm" %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-5">
          <i class="bi bi-rss display-1 text-muted"></i>
          <h3 class="mt-3">No feeds yet</h3>
          <p class="text-muted">Create your first feed to start aggregating content.</p>
          <%= link_to "Create Your First Feed", new_feed_path, class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
