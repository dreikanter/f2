<%# locals: (feed:) %>

<div class="card mt-3" data-controller="form-collapse autofocus">
  <div class="card-header">
    <h5 class="card-title mb-0">Edit Scheduling</h5>
  </div>
  <div class="card-body">
    <%= form_with model: feed, class: "needs-validation", novalidate: true do |form| %>
  <%= hidden_field_tag :section, "scheduling" %>
  <% if feed.errors.any? %>
    <div class="alert alert-danger">
      <h6><%= pluralize(feed.errors.count, "error") %> occurred:</h6>
      <ul class="mb-0">
        <% feed.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :cron_expression, "Schedule", class: "form-label fw-bold" %>
    <%= form.select :cron_expression,
        options_for_select(cron_expression_options, feed.cron_expression),
        { prompt: "Choose schedule..." },
        { class: "form-select", required: true, autofocus: true } %>
    <div class="form-text">Select how often the feed should be refreshed</div>
    <div class="invalid-feedback">Select a schedule.</div>
  </div>

  <div class="mb-3">
    <%= form.label :import_after, "Import items after", class: "form-label fw-bold" %>
    <%= form.date_field :import_after, class: "form-control" %>
    <div class="form-text">Only import items published after this date (optional)</div>
  </div>

  <div class="d-flex gap-2">
    <%= form.submit "Save", class: "btn btn-primary" %>
    <button type="button" class="btn btn-outline-secondary" data-action="click->form-collapse#cancel">Cancel</button>
  </div>
    <% end %>
  </div>
</div>
