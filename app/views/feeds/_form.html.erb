<%# locals: (feed:) %>
<%= form_with model: feed, class: "needs-validation", novalidate: true do |form| %>
  <% if feed.errors.any? %>
    <div class="alert alert-danger">
      <h6><%= pluralize(feed.errors.count, "error") %> occurred:</h6>
      <ul class="mb-0">
        <% feed.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :name, "Title", class: "form-label" %>
    <%= form.text_field :name, class: "form-control", placeholder: "Feed title for identification", maxlength: Feed::NAME_MAX_LENGTH %>
    <div class="form-text">Give your feed a descriptive name</div>
  </div>

  <div class="mb-3">
    <%= form.label :url, "Feed URL", class: "form-label" %>
    <%= form.url_field :url, class: "form-control", required: true, placeholder: "https://example.com/feed.xml" %>
    <div class="invalid-feedback">Please provide a valid HTTP or HTTPS URL.</div>
  </div>

  <div class="mb-3">
    <%= form.label :feed_profile_id, "Feed Profile", class: "form-label" %>
    <%= form.select :feed_profile_id, options_for_select(feed_profile_options, feed.feed_profile_id), { prompt: "Choose feed profile..." }, { class: "form-select", required: true } %>
    <div class="form-text">Select the processing configuration for this feed</div>
    <div class="invalid-feedback">Please select a feed profile.</div>
  </div>

  <div class="mb-3">
    <%= form.label :cron_expression, "Schedule", class: "form-label" %>
    <%= form.select :cron_expression,
        options_for_select([
          ["Every 30 minutes", "*/30 * * * *"],
          ["Every hour", "0 * * * *"],
          ["Every 6 hours", "0 */6 * * *"],
          ["Daily at midnight", "0 0 * * *"]
        ], feed.cron_expression),
        { prompt: "Choose schedule..." },
        { class: "form-select", required: true } %>
    <div class="form-text">Select how often the feed should be refreshed</div>
    <div class="invalid-feedback">Please select a schedule.</div>
  </div>

  <div class="mb-3">
    <%= form.label :import_after, "Import items after", class: "form-label" %>
    <%= form.date_field :import_after, class: "form-control" %>
    <div class="form-text">Only import items published after this date (optional)</div>
  </div>

  <div class="mb-3">
    <%= form.label :access_token_id, "Access Token", class: "form-label" %>
    <% if has_active_tokens? %>
      <%= form.select :access_token_id, options_for_select(access_token_options, feed.access_token_id),
                      { prompt: "Choose access token..." },
                      { class: "form-select" } %>
      <div class="form-text">Select the Freefeed access token to use for posting</div>
    <% else %>
      <%= form.select :access_token_id, options_for_select([["No active access tokens available", ""]]),
                      {},
                      { class: "form-select",
                        disabled: true } %>
      <div class="form-text text-muted">No active access tokens are available. Please create and validate an access token first.</div>
    <% end %>
  </div>

  <div class="mb-3">
    <%= form.label :target_group, "Target Group", class: "form-label" %>
    <%= form.text_field :target_group, class: "form-control", placeholder: "e.g., mygroup" %>
    <div class="form-text">The Freefeed group where posts will be published</div>
  </div>

  <div class="mb-3">
    <%= form.label :description, "Description", class: "form-label" %>
    <%= form.text_area :description, class: "form-control", rows: 3, placeholder: "Optional description" %>
    <div class="form-text">Optional description of the feed purpose</div>
  </div>

  <div class="d-flex gap-2">
    <%= form.submit "Save Feed", class: "btn btn-primary" %>
    <%= link_to "Cancel", feed, class: "btn btn-outline-secondary" %>
  </div>
<% end %>