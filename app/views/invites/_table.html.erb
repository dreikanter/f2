<% if invites.any? %>
  <div class="table-responsive">
    <table class="table table-hover table-bordered">
      <thead>
        <tr>
          <th>Created</th>
          <th>Invited User</th>
          <th>Invitation Code</th>
          <th style="width: 1%;" class="text-center"></th>
        </tr>
      </thead>
      <tbody>
        <% invites.each do |invite| %>
          <tr>
            <td><%= short_time_ago(invite.created_at) %></td>
            <td>
              <% if invite.invited_user %>
                <%= invite.invited_user.name %>
              <% else %>
                <em class="text-muted">Not used yet</em>
              <% end %>
            </td>
            <td>
              <div class="d-flex align-items-center gap-2">
                <code><%= invite.id %></code>
                <button type="button" class="btn btn-sm btn-link text-muted p-0" data-controller="clipboard" data-clipboard-text-value="<%= new_registration_url(code: invite.id) %>" data-action="clipboard#copy" title="Copy invitation link to clipboard">
                  <%= icon("clipboard") %>
                </button>
              </div>
            </td>
            <td style="width: 1%;" class="text-center">
              <% if !invite.invited_user && policy(invite).destroy? %>
                <div class="dropdown">
                  <button class="btn btn-sm btn-link text-muted p-0" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <%= icon("three-dots-vertical") %>
                  </button>
                  <ul class="dropdown-menu dropdown-menu-end">
                    <li>
                      <%= button_to invite_path(invite),
                                    method: :delete,
                                    class: "dropdown-item text-danger",
                                    form: { data: { turbo_confirm: "Are you sure you want to delete this invitation?" } } do %>
                        <%= icon("trash", css_class: "me-2") %>Delete
                      <% end %>
                    </li>
                  </ul>
                </div>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <div class="text-center py-5">
    <p>No invites yet</p>
  </div>
<% end %>
