<%= page_header "Access Tokens" do %>
  <div class="d-flex align-items-center">
    <% if policy(AccessToken).create? %>
      <%= link_to "New Token", new_settings_access_token_path, class: "btn btn-primary me-3" %>
    <% end %>
    <%= link_to "Back to Settings", settings_path, class: "btn btn-outline-secondary" %>
  </div>
<% end %>

<% if @access_tokens.inactive.exists? %>
  <div class="alert alert-secondary mb-4">
    <strong>Note:</strong> Inactive tokens automatically disable associated feeds.
    You can <b>Replace</b> inactive tokens with new ones to re-enable your feeds.
  </div>
<% end %>

<% if @access_tokens.any? %>
  <div class="table-responsive">
    <table class="table table-hover table-bordered">
      <thead>
        <tr>
          <th>Name</th>
          <th>Status</th>
          <th>Created</th>
          <th>Last Used</th>
          <th class="text-end">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @access_tokens.each do |access_token| %>
          <tr>
            <td>
              <%= access_token.name %>
            </td>
            <td>
              <%= render "shared/access_token_status", access_token: access_token %>
            </td>
            <td>
              <span class="text-muted">
                <%= time_ago_in_words(access_token.created_at) %> ago
              </span>
            </td>
            <td>
              <% if access_token.last_used_at %>
                <span class="text-muted">
                  <%= time_ago_in_words(access_token.last_used_at) %> ago
                </span>
              <% else %>
                <span class="text-muted">Never</span>
              <% end %>
            </td>
            <td class="text-end">
              <%= link_to "Validate", settings_access_token_validation_path(access_token),
                          class: "text-decoration-none me-3",
                          data: { turbo_method: :post } %>
              <% if policy(access_token).update? %>
                <%= link_to "Replace", edit_settings_access_token_path(access_token),
                            class: "text-decoration-none me-3" %>
              <% end %>
              <% if policy(access_token).destroy? %>
                <%= link_to "Delete", settings_access_token_path(access_token),
                            class: "text-danger text-decoration-none",
                            data: {
                              turbo_method: :delete,
                              turbo_confirm: "Are you sure you want to delete '#{access_token.name}'? This action cannot be undone."
                            } %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <div class="card">
    <div class="card-body text-center py-5">
      <h5>No access tokens yet</h5>
      <p class="text-muted mb-4">Add Freefeed API access token to enable content reposting.</p>
      <% if policy(AccessToken).create? %>
        <%= link_to "Create New Token", new_settings_access_token_path, class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
<% end %>
