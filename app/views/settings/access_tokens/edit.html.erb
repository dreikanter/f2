<% content_for :title, "Edit Token" %>

<div class="space-y-8">
  <div class="flex flex-col gap-3 sm:flex-row sm:items-start sm:justify-between">
    <h1 class="ff-h1">Edit Token</h1>
    <%= link_to "Back to Access Tokens", settings_access_tokens_path, class: class_names("ff-button", "ff-button--secondary", "ff-button--compact") %>
  </div>

  <div class="max-w-3xl space-y-6">
    <div class="ff-alert ff-alert--warning">
      Make sure the updated token has access to every group used by your feeds. Otherwise those feeds will remain inactive.
    </div>

    <%= render "form",
               access_token: @access_token,
               token_label: "New FreeFeed Access Token",
               token_placeholder: "Leave empty to keep current token",
               token_value: "",
               submit_text: "Update Token" %>
  </div>
</div>
