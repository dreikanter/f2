<% content_for :skip_navigation, true %>
<% content_for :body_class, "bg-light" %>
<% content_for :title, "All Set" %>

<div class="row justify-content-center">
  <div class="col-lg-8">
    <div class="card shadow-sm">
      <div class="card-body p-5">
        <h1 class="card-title mb-4">You're all set</h1>

        <p class="lead mb-4">
          Perfect. You've added a token and a feed. Everything's ready to go.
        </p>

        <p class="mb-4">
          Feeder will start checking your feed for new content and posting it to your FreeFeed groups according to the schedule you set. You can add more feeds, adjust settings, or change schedules anytime.
        </p>

        <div class="d-flex gap-3">
          <%= button_to "Finish setup", onboarding_path, method: :delete, class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
</div>
