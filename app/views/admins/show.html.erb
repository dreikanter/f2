<% content_for :title, "Admin Panel" %>

<div class="space-y-8">
  <h1 class="ff-h1">Admin Panel</h1>

  <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
    <div class="ff-card">
      <div class="ff-card__body space-y-4">
        <h2 class="flex items-center gap-2 text-lg font-semibold text-slate-900">
          <%= icon("people") %>
          <span>Users</span>
        </h2>
        <p class="ff-text text-slate-600">Manage user accounts and permissions</p>
        <%= link_to "View Users", admin_users_path, class: "ff-button ff-button--compact" %>
      </div>
    </div>

    <div class="ff-card">
      <div class="ff-card__body space-y-4">
        <h2 class="flex items-center gap-2 text-lg font-semibold text-slate-900">
          <%= icon("calendar-event") %>
          <span>System Events</span>
        </h2>
        <p class="ff-text text-slate-600">View system events, logs, and activity</p>
        <%= link_to "View Events", admin_events_path, class: "ff-button ff-button--compact" %>
      </div>
    </div>

    <div class="ff-card">
      <div class="ff-card__body space-y-4">
        <h2 class="flex items-center gap-2 text-lg font-semibold text-slate-900">
          <%= icon("hdd") %>
          <span>System Info</span>
        </h2>
        <p class="ff-text text-slate-600">View disk usage and other system information</p>
        <%= link_to "View System Info", admin_system_stats_path, class: "ff-button ff-button--compact" %>
      </div>
    </div>

    <div class="ff-card">
      <div class="ff-card__body space-y-4">
        <h2 class="flex items-center gap-2 text-lg font-semibold text-slate-900">
          <%= icon("stack") %>
          <span>Background Jobs</span>
        </h2>
        <p class="ff-text text-slate-600">Monitor and manage background job queues</p>
        <%= link_to "/jobs", class: "ff-button ff-button--compact", target: "_blank", rel: "noopener noreferrer" do %>
          View Jobs <%= icon("box-arrow-up-right", css_class: "ms-3") %>
        <% end %>
      </div>
    </div>

    <% if Rails.env.development? %>
      <div class="ff-card">
        <div class="ff-card__body space-y-4">
          <h2 class="flex items-center gap-2 text-lg font-semibold text-slate-900">
            <%= icon("inbox") %>
            <span>Sent Emails</span>
          </h2>
          <p class="ff-text text-slate-600">Review emails captured in development</p>
          <%= link_to development_sent_emails_path, class: "ff-button ff-button--compact", target: "_blank", rel: "noopener noreferrer" do %>
            View Sent Emails <%= icon("box-arrow-up-right", css_class: "ms-3") %>
          <% end %>
        </div>
      </div>

      <div class="ff-card">
        <div class="ff-card__body space-y-4">
          <h2 class="flex items-center gap-2 text-lg font-semibold text-slate-900">
            <%= icon("grid") %>
            <span>UI Reference</span>
          </h2>
          <p class="ff-text text-slate-600">Reference for all reusable UI components.</p>
          <%= link_to development_components_path, class: "ff-button ff-button--compact", target: "_blank", rel: "noopener noreferrer" do %>
            View UI Components <%= icon("box-arrow-up-right", css_class: "ms-3") %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
