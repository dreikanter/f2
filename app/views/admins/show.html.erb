<div class="container-fluid">
  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Admin Panel</h1>
      </div>

      <div class="row">
        <div class="col-md-6 col-lg-4 mb-4">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">
                <i class="bi bi-calendar-event me-2"></i>
                System Events
              </h5>
              <p class="card-text">View system events, logs, and activity</p>
              <%= link_to "View Events", admin_events_path, class: "btn btn-primary" %>
            </div>
          </div>
        </div>

        <div class="col-md-6 col-lg-4 mb-4">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">
                <i class="bi bi-gear me-2"></i>
                Feed Profiles
              </h5>
              <p class="card-text">Manage feed processing configurations</p>
              <%= link_to "Manage Profiles", admin_feed_profiles_path, class: "btn btn-primary" %>
            </div>
          </div>
        </div>

        <div class="col-md-6 col-lg-4 mb-4">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">
                <i class="bi bi-trash me-2"></i>
                Group Purge
              </h5>
              <p class="card-text">Withdraw all posts from a FreeFeed group</p>
              <%= link_to "Purge Group", new_admin_purge_path, class: "btn btn-danger" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
