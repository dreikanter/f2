<div class="container-fluid">
  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Admin Panel</h1>
      </div>

      <div class="row">
        <div class="col-md-6 col-lg-4 mb-4">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">
                <%= icon("people", css_class: "me-2") %>
                Users
              </h5>
              <p class="card-text">Manage user accounts and permissions</p>
              <%= link_to "View Users", admin_users_path, class: "btn btn-primary" %>
            </div>
          </div>
        </div>

        <div class="col-md-6 col-lg-4 mb-4">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">
                <%= icon("calendar-event", css_class: "me-2") %>
                System Events
              </h5>
              <p class="card-text">View system events, logs, and activity</p>
              <%= link_to "View Events", admin_events_path, class: "btn btn-primary" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
