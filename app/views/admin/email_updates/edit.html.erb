<%= page_header "Change Email for #{@user.email_address}" %>

<div class="alert alert-info mb-4">
  <strong>How this works:</strong> You can either change the email immediately or send a confirmation email to the new address.
  If confirmation is required, the user must click the link in the email before the change takes effect.
</div>

<div class="card">
  <div class="card-body">
    <%= form_with model: @user, url: admin_user_email_update_path(@user), method: :patch do |form| %>
      <div class="mb-3">
        <%= form.label :email_address, "Current Email", class: "form-label fw-bold" %>
        <%= form.text_field :email_address, value: @user.email_address, disabled: true, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= form.label :email_address, "New Email", class: "form-label fw-bold" %>
        <%= form.email_field :email_address, value: "", class: "form-control", required: true, autofocus: true %>
      </div>

      <div class="mb-3">
        <div class="form-check">
          <%= check_box_tag :require_confirmation, "1", false, class: "form-check-input" %>
          <%= label_tag :require_confirmation, "Require user to confirm new email address before change takes effect", class: "form-check-label" %>
        </div>
      </div>

      <div class="d-flex gap-2">
        <%= form.submit "Update Email", class: "btn btn-primary", data: { turbo_confirm: "Update email for this user?" } %>
        <%= link_to "Cancel", admin_user_path(@user), class: "btn btn-outline-secondary" %>
      </div>
    <% end %>
  </div>
</div>
