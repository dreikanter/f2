<% content_for :title, "Reset Password" %>

<div class="space-y-8">
  <%= render PageHeaderComponent.new(title: "Reset Password for #{@user.email_address}") do |header| %>
    <% header.with_action_button do %>
      <%= link_to "Back to User", admin_user_path(@user), class: class_names("ff-button", "ff-button--secondary", "ff-button--compact") %>
    <% end %>
  <% end %>

  <div class="ff-alert ff-alert--info">
    <strong>How this works:</strong> This will send a password reset email to the user's current email address.
    The user will receive a link to set a new password. This does not change the password directlyâ€”the user must complete the reset process by clicking the link.
  </div>

  <div class="ff-card">
    <div class="ff-card__body">
      <%= form_with url: admin_user_password_reset_path(@user), method: :post do |form| %>
        <div class="flex flex-wrap gap-2">
          <%= form.submit "Send Password Reset Email", class: "ff-button ff-button--compact", data: { turbo_confirm: "Send password reset email to #{@user.email_address}?" } %>
          <%= link_to "Cancel", admin_user_path(@user), class: "ff-button ff-button--secondary ff-button--compact" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
