<nav aria-label="<%= label %> pagination" class="mt-8 flex justify-center">
  <ul class="inline-flex items-center -space-x-px rounded-lg border border-slate-200 bg-white text-sm shadow-sm">
    <% if current_page > 1 %>
      <li class="relative focus-within:z-10">
        <%= link_to "Previous",
                    path_for(current_page - 1),
                    class: "flex h-9 items-center rounded-l-lg px-3 font-medium text-slate-600 transition hover:bg-slate-50 hover:text-slate-900 focus:outline-none focus:ring-2 focus:ring-slate-400 focus:ring-offset-2" %>
      </li>
    <% else %>
      <li class="relative">
        <span class="flex h-9 items-center rounded-l-lg px-3 font-medium text-slate-300">Previous</span>
      </li>
    <% end %>

    <% each_page do |page| %>
      <% if page == current_page %>
        <li class="relative">
          <span class="flex h-9 items-center border-x border-slate-200 bg-slate-100 px-3 font-semibold text-slate-900"><%= page %></span>
        </li>
      <% else %>
        <li class="relative focus-within:z-10">
          <%= link_to page,
                      path_for(page),
                      class: "flex h-9 items-center border-x border-slate-200 bg-white px-3 text-slate-600 transition hover:bg-slate-50 hover:text-slate-900 focus:outline-none focus:ring-2 focus:ring-slate-400 focus:ring-offset-2",
                      aria: { label: "Go to page #{page}" } %>
        </li>
      <% end %>
    <% end %>

    <% if current_page < total_pages %>
      <li class="relative focus-within:z-10">
        <%= link_to "Next",
                    path_for(current_page + 1),
                    class: "flex h-9 items-center rounded-r-lg px-3 font-medium text-slate-600 transition hover:bg-slate-50 hover:text-slate-900 focus:outline-none focus:ring-2 focus:ring-slate-400 focus:ring-offset-2" %>
      </li>
    <% else %>
      <li class="relative">
        <span class="flex h-9 items-center rounded-r-lg px-3 font-medium text-slate-300">Next</span>
      </li>
    <% end %>
  </ul>
</nav>
